<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         id="WebApp_ID">
	
	<display-name>suppliermgmt</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>suppliermgmt</param-value>
	</context-param>

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:conf/xml/log4j.xml</param-value>
	</context-param>
 
	<session-config>
		<session-timeout>240</session-timeout>
	</session-config>
 
 	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
 
	<!-- Filters -->
	<filter>
		<filter-name>DummySecurityFilter</filter-name>
		<filter-class>com.penske.apps.suppliermgmt.filter.DummySecurityFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>SessionValidationFilter</filter-name>
		<filter-class>com.penske.apps.suppliermgmt.filter.SessionValidationFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>SerializableFilter</filter-name>
		<filter-class>com.penske.apps.suppliermgmt.filter.SerializableFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>DummySecurityFilter</filter-name>
		<url-pattern>/entry/*</url-pattern>
	</filter-mapping>
 
 	<filter-mapping>
		<filter-name>SessionValidationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>SerializableFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	 
	<!-- Servlets -->
	<servlet>
		<servlet-name>ApplicationEntry</servlet-name>
		<servlet-class>com.penske.apps.suppliermgmt.servlet.ApplicationEntry</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>SMCLogOff</servlet-name>
		<servlet-class>com.penske.apps.suppliermgmt.servlet.SMCLogOff</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>suppliermgmt</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
	 		<param-name>contextClass</param-name>
	  		<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
		</init-param>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>com.penske.apps.suppliermgmt.configuration.WebConfiguration</param-value>
		</init-param>
        <init-param>
            <param-name>spring.profiles.active</param-name>
            <param-value>development</param-value>
        </init-param>
		<!-- This parameter is needed just for suppliermgmt so it can build the navigation URLS to the other SMC apps correctly in the QA2 environment -->
        <init-param>
        	<param-name>isQA2</param-name>
        	<param-value>false</param-value>
        </init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ApplicationEntry</servlet-name>
		<url-pattern>/entry/ApplicationEntry</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SMCLogOff</servlet-name>
		<url-pattern>/SMCLogOff</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>suppliermgmt</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>

	<!-- WebContent Negotiation Settings -->
	<jsp-config>
		<taglib>
			<taglib-uri>/WEB-INF/tld/taglib.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/taglib.tld</taglib-location>
		</taglib>
		<jsp-property-group>
			<url-pattern>*.jspf</url-pattern>
			<el-ignored>false</el-ignored>
			<is-xml>false</is-xml>
		</jsp-property-group>
	</jsp-config>
	
	<resource-ref>
	  <description>suppliermgmt data source</description>
	  <res-ref-name>ds_suppliermgmt</res-ref-name>
	  <res-type>javax.sql.DataSource</res-type>
	  <res-auth>Container</res-auth>
	  <res-sharing-scope>Unshareable</res-sharing-scope>
	</resource-ref>
	
	<resource-ref>
		<description>cro data source</description>
		<res-ref-name>ds_cro</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Unshareable</res-sharing-scope>
	</resource-ref>
</web-app>